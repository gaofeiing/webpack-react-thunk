{
    "compilerOptions": {
      "declaration": true,
      "module": "es6",
      "outDir": "./ts",
      "allowJs": true,
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "esModuleInterop": true, // 允许export=导出，由import from 导入
    },
    "include": [
      "./src/*"
    ],
    "exclude": [
      "./node_modules"
    ]
}